// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String    @id @unique @default(cuid())
  contacts         Contact[]
  countryCode      String    @db.VarChar(10)
  deviceId         String?   @db.VarChar(255)
  email            String?   @unique @db.VarChar(255)
  firstInstallTime Int?      @db.Integer
  firstName        String?   @db.VarChar(255)
  lastName         String?   @db.VarChar(255)
  mobile           String    @unique @db.VarChar(15)
  pin              String?   @db.VarChar(255)
  session          String?   @unique @db.VarChar(255)
  verifiedEmail    Boolean   @db.Boolean
  verifiedMobile   Boolean   @db.Boolean
}

model Contact {
  firstName      String @db.VarChar(255)
  lastName       String @db.VarChar(255)
  phoneNumbers   Json[] @db.Json
  emailAddresses Json[] @db.Json
  recordID       String @db.VarChar(255)
  user           User   @relation(fields: [userId], references: [id])
  userId         String

  @@unique([userId, recordID], name: "contactID")
}

enum Role {
  USER
  ADMIN
}
