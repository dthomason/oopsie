{
  "compilerOptions": {
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "strict": true,
    "lib": ["esnext", "ES2015", "ES2019", "ES2020"],
    "noImplicitAny": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["src/**/*.ts", "./types/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "./design",
    "jest.config.js"
  ],
}
